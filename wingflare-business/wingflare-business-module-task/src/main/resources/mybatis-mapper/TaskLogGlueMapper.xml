<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wingflare.task.admin.dao.TaskLogGlueDao">
	
	<resultMap id="TaskLogGlue" type="com.wingflare.task.admin.core.model.TaskLogGlue" >
		<result column="id" property="id" />
	    <result column="task_id" property="taskId" />
		<result column="glue_type" property="glueType" />
	    <result column="glue_source" property="glueSource" />
	    <result column="glue_remark" property="glueRemark" />
	    <result column="add_time" property="addTime" />
	    <result column="update_time" property="updateTime" />
	</resultMap>

	<sql id="Base_Column_List">
		t.id,
		t.task_id,
		t.glue_type,
		t.glue_source,
		t.glue_remark,
		t.add_time,
		t.update_time
	</sql>
	
	<insert id="save" parameterType="com.wingflare.task.admin.core.model.TaskLogGlue" useGeneratedKeys="true" keyProperty="id" >
		INSERT INTO task_logglue (
			`task_id`,
			`glue_type`,
			`glue_source`,
			`glue_remark`,
			`add_time`, 
			`update_time`
		) VALUES (
			#{taskId},
			#{glueType},
			#{glueSource},
			#{glueRemark},
			#{addTime},
			#{updateTime}
		);
		<!--<selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
			SELECT LAST_INSERT_ID() 
		</selectKey>-->
	</insert>
	
	<select id="findByTaskId" parameterType="java.lang.Integer" resultMap="TaskLogGlue">
		SELECT <include refid="Base_Column_List" />
		FROM task_logglue AS t
		WHERE t.task_id = #{taskId}
		ORDER BY id DESC
	</select>
	
	<delete id="removeOld" >
		DELETE FROM task_logglue
		WHERE id NOT in(
			SELECT id FROM(
				SELECT id FROM task_logglue
				WHERE `task_id` = #{taskId}
				ORDER BY update_time desc
				LIMIT 0, #{limit}
			) t1
		) AND `task_id` = #{taskId}
	</delete>
	
	<delete id="deleteByTaskId" parameterType="java.lang.Integer" >
		DELETE FROM task_logglue
		WHERE `task_id` = #{taskId}
	</delete>
	
</mapper>