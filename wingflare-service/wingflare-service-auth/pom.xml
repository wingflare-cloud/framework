<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>com.wingflare</groupId>
        <artifactId>wingflare-service</artifactId>
        <version>${revision}</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>wingflare-service-auth</artifactId>
    <packaging>jar</packaging>
    <properties>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.wingflare</groupId>
            <artifactId>wingflare-module-auth</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>

        <dependency>
            <groupId>com.wingflare</groupId>
            <artifactId>wingflare-lib-tracing</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-starter-bootstrap</artifactId>
        </dependency>

        <dependency>
            <groupId>com.wingflare</groupId>
            <artifactId>wingflare-adapter-spring-servlet-web</artifactId>
        </dependency>

        <dependency>
            <groupId>com.wingflare</groupId>
            <artifactId>wingflare-starter-spring-security</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <dependency>
            <groupId>com.wingflare</groupId>
            <artifactId>wingflare-starter-spring-security</artifactId>
        </dependency>

        <dependency>
            <groupId>com.wingflare</groupId>
            <artifactId>wingflare-adapter-spring-common</artifactId>
        </dependency>

        <dependency>
            <groupId>com.wingflare</groupId>
            <artifactId>wingflare-adapter-spring-event</artifactId>
        </dependency>

    </dependencies>


    <profiles>
        <profile>
            <id>cloud-alibaba</id>
            <dependencies>
                <dependency>
                    <groupId>com.wingflare</groupId>
                    <artifactId>wingflare-adapter-cloud-alibaba</artifactId>
                </dependency>
            </dependencies>

            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>

        <profile>
            <id>cloud-tencent</id>
            <dependencies>
                <dependency>
                    <groupId>com.wingflare</groupId>
                    <artifactId>wingflare-adapter-cloud-tencent</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>nosql-redis</id>
            <dependencies>
                <dependency>
                    <groupId>com.wingflare</groupId>
                    <artifactId>wingflare-adapter-spring-redis</artifactId>
                </dependency>

            </dependencies>

            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>

    </profiles>

</project>